{
    "root": true,
    "env": {
        "node": true
    },
    "extends": ["plugin:vue/recommended", "eslint:recommended"],
    "rules": {
        "vue/html-indent": ["error", 4, { "baseIndent": 1 }],
        "vue/html-self-closing": [
            "error",
            {
                "html": {
                    "void": "always",
                    "normal": "never"
                }
            }
        ]
    },
    "parserOptions": {
        "parser": "babel-eslint"
    },
    "overrides": [
        {
            "files": ["**/*.test.{j,t}s", "**/*.spec.{j,t}s"],
            "env": {
                "jest": true
            }
        }
    ]
}
