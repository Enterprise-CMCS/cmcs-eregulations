{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:vue/recommended",
        "airbnb-base",
        "prettier",
        "plugin:storybook/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": ["vue"],
    "rules": {
        "eqeqeq": "off",
        "import/no-unresolved": "off",
        "import/first": "off",
        "no-console": ["error", { "allow": ["warn", "error"] }],
        "no-nested-ternary": "off",
        "prefer-template": "off",
        "vue/order-in-components": "off",
        "vue/no-unsupported-features": [
            "error",
            {
                "version": "^2.7.0",
                "ignores": []
            }
        ],
        "vue/no-v-html": "off"
    }
}
